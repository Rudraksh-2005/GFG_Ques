class Solution {
  public:
    int minParentheses(string& s) {
        // code here
           int n = s.size();
        stack<char> st;
        
        for (int i = 0; i < n; i++) {
            if (s[i] == '(') {
                st.push(s[i]);
            }
            else {
                if (!st.empty() && st.top() == '(') {
                    st.pop(); // Matching pair found
                } else {
                    st.push(s[i]); // Unmatched closing parenthesis
                }
            }
        }
        
        return st.size();
    }
};
