class Solution {
  public:
    int help(Node *root,int &ans){
        if(root==NULL) return 0;
        
        int lmax=max(0,help(root->left,ans));
        int rmax=max(0,help(root->right,ans));
        
        ans=max(ans,lmax+rmax+root->data);
        return max(lmax,rmax)+ root->data;
    }
    
    int findMaxSum(Node *root) {
        // code here
        int ans=INT_MIN;
        help(root,ans);
        return ans;
    }
};
